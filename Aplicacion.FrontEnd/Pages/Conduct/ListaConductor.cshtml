@page
@model Aplicacion.FrontEnd.Pages.ListaConductorModel
@{
}
<h1>Conductores</h1>
<a class="btn btn-primary" asp-page="./EditarConductor">
    <i class="fa-regular fa-square-plus">Agregar Conductor</i>
</a>
<table class="table">
    <th>
            <th>Cedula</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Celular</th>
    </th>
    @foreach (var item in Model.conduc)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Cedula</td>
            <td>@item.Nombre</td>
            <td>@item.Apellido</td>
            <td>@item.Celular</td>
            <td>
                <a class="btn btn-outline-success" asp-page="./DetalleConductor" asp-route-ConductorId="@item.Id">
                    <i class="fas fa-info-circle"></i>
                    @* <i class="fa-brands fa-windows"></i> *@
                </a>
                <a class="btn btn-outline-success" asp-page="./EditarConductor" asp-route-ConductorId="@item.Id">
                    <i class="fa-regular fa-pen-to-square"></i>
                </a>
                
            </td>
            
        </tr>
    }
</table>