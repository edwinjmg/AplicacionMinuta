@page
@model Aplicacion.FrontEnd.Pages.ListaSalidaModel
@{
}
<h1>Registro de Salidas</h1>
<a class="btn btn-primary" asp-page="./CrearSalida">
    <i class="fa-regular fa-square-plus">Agregar Salida</i>
</a>
<table class="table">
    <th>
            <th>Fecha Hora</th>
            <th>Vehiculo</th>
            <th>Conductor</th>
            <th>Producto</th>
    </th>
    @foreach (var salida in Model.salid)
    {
        <tr>
            <td>@salida.Id</td>
            <td>@salida.FechaHora</td>
            <td>@salida.Vehiculo.Placa</td>
            <td>@salida.Conductor.Nombre @salida.Conductor.Apellido</td>
            <td>@salida.Producto.Nombre</td>
            <td>
                <a class="btn btn-outline-success" asp-page="./DetalleSalida" asp-route-SalidaId="@salida.Id">
                    <i class="fas fa-info-circle"></i>
                </a>                
            </td>
            
        </tr>
    }
</table>