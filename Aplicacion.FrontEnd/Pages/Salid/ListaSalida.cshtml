@page
@model Aplicacion.FrontEnd.Pages.ListaSalidaModel
@{
}
<div class="row">
    <div class="p-3 mb-2 bg-light text-white">
<h1 class="text-secondary">Registro de Salidas</h1>
<a class="btn btn-success" asp-page="./CrearSalida">
    <i class="fa-regular fa-square-plus"></i><em> NUEVA SALIDA</em>
</a>
<table class="table">
    <th>
            <th>Fecha Hora</th>
            <th>Vehiculo</th>
            <th>Conductor</th>
            <th>Producto</th>
    </th>
    @foreach (var salida in Model.salid)
    {
        <tr>
            <td>@salida.Id</td>
            <td>@salida.FechaHora</td>
            <td>@salida.Vehiculo.Placa</td>
            <td>@salida.Conductor.Nombre @salida.Conductor.Apellido</td>
            <td>@salida.Producto.Nombre</td>
            <td>
                <a class="btn btn-outline-success" asp-page="./DetalleSalida" asp-route-SalidaId="@salida.Id">
                    <i class="fas fa-info-circle"></i>
                </a>                
            </td>
            
        </tr>
    }
</table>
    </div>
</div>